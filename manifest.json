{
    "manifest_version": 3,
    "name": "AXOWOTL",
    "version": "1.0.0",
    "description": "testout chrome pet stuff",
    "omnibox": { "keyword": "axl" },
    "action": {
        "default_icon": {
            "16": "images/axolotl.png",
            "24": "images/axolotl.png",
            "32": "images/axolotl.png"
        },
        "default_title": "AXOWOTL",
        "default_popup": "popup.html"
    },

    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "tabs",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "web_accessible_resources": [{
        "resources": ["/images/*"],
        "matches": ["<all_urls>"]
    }],
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "css": ["style.css"],
        "js": ["jquery-3.6.1.min.js", "content.js", "jquery-ui.min.js"]
    }]
}